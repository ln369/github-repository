package com.edu.aynu.oa.index.news.lablemanager.handler;

import java.util.ArrayList;
import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.edu.aynu.oa.commons.bean.LableManager;
import com.edu.aynu.oa.commons.bean.Page;
import com.edu.aynu.oa.index.news.lablemanager.service.INewslableService;

@Controller
@RequestMapping("/news/label")
public class Newslablehandler{
	@Autowired
	private INewslableService service;
	@RequestMapping("/queryNewslable.do")
	public String newslablequery(@RequestParam(defaultValue="1")int pageNum,@RequestParam(value="select",defaultValue="0")int id,HttpSession session){
		session.setAttribute("id", id);
		List<LableManager> parents=service.queryAllParents();
		session.setAttribute("parent", parents);
		Page<LableManager> page = service.findCurrentPage(pageNum,id);	
		session.setAttribute("page", page);
		return "/html/news/newslableManager.jsp";
	}
	@RequestMapping("/addNewslable.do")
	public String newslableAdd(HttpServletRequest request,LableManager labelmanager){
		String name = request.getParameter("textfield");
		String select = request.getParameter("select");
		int pid=Integer.parseInt(select);
		String content = request.getParameter("textarea");		
		//System.out.println(name+pid+content);	
		labelmanager.setPid(pid);
		labelmanager.setName(name);
		labelmanager.setContent(content);
		service.insertLable(labelmanager);		
		return "/news/label/queryNewslable.do";
	}
	@RequestMapping("/delectNewslable.do")
	public String newslableDelect(int id,HttpSession session){	
		service.delectlable(id);
		return "/news/label/queryNewslable.do";
	}
	@RequestMapping("/findByIdNewslable.do")
	public String newslableFindById(int id,HttpSession session){
		LableManager label=(LableManager) service.findeById(id);
		
		session.setAttribute("lable",label);
		return "/html/news/updateLabels.jsp";
	}
	@RequestMapping("/updateNewslable.do")
	public String newslableUpdate(LableManager labelmanager,HttpServletRequest request){
		String id1=request.getParameter("id");
		int id=Integer.parseInt(id1);
		String name = request.getParameter("textfield");
		String select = request.getParameter("select2");
		int pid=Integer.parseInt(select);
		String content = request.getParameter("textarea");
		
		System.out.println(name+pid+content);	
		labelmanager.setId(id);
		labelmanager.setPid(pid);
		labelmanager.setName(name);
		labelmanager.setContent(content);
		System.out.println(labelmanager);
		service.updatelable(labelmanager);
		
		return "/news/label/queryNewslable.do";
	}
}
